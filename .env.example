# Django secret key
SECRET_KEY=

# Database
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# Camera behavior on Windows
# Set to 1 to auto-detect and open physical cameras at server start.
# Default 0 keeps a dummy camera to avoid DirectShow/DSH spam on startup.
CAMERA_AUTO_START=0

# Preferred OpenCV backend on Windows: dshow | msmf | any
OPENCV_BACKEND=dshow

# Recording settings (optional overrides)
# RECORDING_DIR=recordings
# VIDEO_FORMAT=XVID
# FRAME_WIDTH=560
# FRAME_HEIGHT=420
# FPS=20
